<?php
    
    $target_path = "uploadstemp/"; 
    if (file_exists($target_path)) {
        $target_path = $target_path . basename( $_FILES['uploadedfile']['name']) ; 
        if(move_uploaded_file($_FILES['uploadedfile']['tmp_name'], $target_path)) {
            echo "<p>The file ". basename( $_FILES['uploadedfile']['name']) . 
                    " has been uploaded</p>";
                    echo $_FILES['uploadedfile']['size'];
            if ($_FILES['uploadedfile']['size'] > 100000) {
                    echo "<p> The size of the file is probably too big</p>";
            }
        }
        else {
            echo "<p>Sorry, there was a problem uploading your file.</p>";
            else {
                echo "<p>Is the file writable?</p>";
            }
            echo "<p>Contact the server administrator for assistance<p>";
        }
    }
    else {
        echo "<p>Can't find destination folder</p>";
        echo "<p>Contact the server administrator for assistance<p>";
    }
?>
