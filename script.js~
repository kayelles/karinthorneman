$(document).ready(function() {
    $("#container").css("min-height", $(window).height());
    $("img").click(function() {
        slideout();
    });
});

function slideout() {

    var slideDuration = 1000;

    $("img").stop(true, true).fadeIn({
        duration:   slideDuration,
        queue:      false;
    }).css('display', 'none').slideDown(slideDuration);

}





